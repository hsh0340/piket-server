generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  no        Int       @id @default(autoincrement()) @db.UnsignedInt
  email     String    @unique(map: "email") @db.VarChar(50)
  loginType Int       @map("login_type") @db.UnsignedTinyInt
  role      Int       @default(0) @db.UnsignedTinyInt
  createdAt DateTime  @default(dbgenerated("CURRENT_TIMESTAMP")) @map("created_at") @db.DateTime(0)
  updatedAt DateTime  @default(dbgenerated("CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP")) @map("updated_at") @db.DateTime(0)
  deletedAt DateTime? @map("deleted_at") @db.DateTime(0)

  @@map("user")
}
